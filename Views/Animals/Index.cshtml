@model IEnumerable<ZOOLO.Models.Animal>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-dark">
    <tr>
        <th>
            @Html.DisplayName("Nombre Zona")
        </th>
        <th>
            @Html.DisplayName("Categoría Animal")
        </th>
        <th>
            @Html.DisplayName("Nombre Animal")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Zona.NombreZona)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoriaAnim)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombreAnim)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdAnim }) |
            @Html.ActionLink("Details", "Details", new { id=item.IdAnim }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IdAnim })
        </td>
    </tr>
}

</table>
